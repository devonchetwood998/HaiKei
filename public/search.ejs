<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results for <%= query %></title>
    <link rel="stylesheet" href="/css/m.min.css">
    <link rel="stylesheet" href="/css/watchpage.css">
    <link rel="stylesheet" href="/css/index-redesign.css">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.1/css/all.css">
</head>
<body>
    <%- include("./templates/sidenav.ejs") %>
    <%- include("./templates/navbar.ejs") %>
</div>
    <h1 style="margin-top: 50px; margin-left: 20px; margin-bottom: 20px;" class="header">Search Results for: "<%= query %>"  </h1>
    <div class="new-releases">
    <div class="recent-releases-grid">
        <% searchData.forEach((searchData) => { %>
                <li class="splide__slide">
                <a class="searchLink" href="/watch/mal/<%-searchData.malId %>"></a>
                    <img style="width: 164px; height: 231px; align-self: center;" src="<%- searchData.image %>" alt="<%- searchData.title.romaji %>">
                    <p style="margin-top: 30px;" class="splide__animeTitle search_result"><%- searchData.title.romaji  %></p>
                </li>	
        <% }) %>
            </ul>
    </div>
    </div>
<script src="/js/main.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
    $("#xheader_browser").click(function (e) {
        $("#xheader_menu, #xheader_browser").toggleClass("active");
    });
});
</script>
<%- include('templates/footer') %>
<%- include('templates/login_modals') %>
</body>
</html>